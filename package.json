{
  "name": "sistem-informasi-manajemen-informatics-learning-center-back-end",
  "version": "0.2.0",
  "main": "./src/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start:prod": "NODE_ENV=production && node ./src/server.js",
    "start:dev": "NODE_ENV=development && nodemon src/server.js",
    "build:patch": "npm version patch",
    "build:minor": "npm version minor",
    "build:major": "npm version major",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "db:migrate": "node ./scripts/db/migrate",
    "db:migrate:silent": "node ./scripts/db/migrate --silent",
    "db:create": "npx sequelize-cli db:create --env test",
    "pretest": "NODE_ENV=test npx sequelize db:drop && npm run db:create && npm run db:migrate",
    "pretest:silent": "NODE_ENV=test npx sequelize db:drop --config src/configs/sequelize.js 2>/dev/null && npm run db:create 2>/dev/null && npm run db:migrate:silent",
    "test": "npm run pretest && NODE_ENV=test jest --detectOpenHandles --silent --coverage --verbose",
    "test:clean": "npm run pretest:silent && NODE_ENV=test jest --detectOpenHandles --silent --coverage --verbose",
    "test:unit": "NODE_ENV=test jest ./tests/units/*/*.test.js --coverage --verbose",
    "test:integration": "npm run pretest && NODE_ENV=test jest ./tests/integrations/*.test.js --detectOpenHandles --coverage --verbose",
    "test:integration:clean": "npm run pretest:silent && NODE_ENV=test jest ./tests/integrations/*.test.js --detectOpenHandles --silent --coverage --verbose"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/src/configs/",
      "/src/db/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bibbeep/Sistem-Informasi-Manajemen-Informatics-Learning-Center-Back-End.git"
  },
  "author": "Muhammad Habib Al Farabi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bibbeep/Sistem-Informasi-Manajemen-Informatics-Learning-Center-Back-End/issues"
  },
  "homepage": "https://github.com/Bibbeep/Sistem-Informasi-Manajemen-Informatics-Learning-Center-Back-End#readme",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@faker-js/faker": "^9.9.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "child-process-promise": "^2.2.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "redis": "^5.8.2",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  }
}
