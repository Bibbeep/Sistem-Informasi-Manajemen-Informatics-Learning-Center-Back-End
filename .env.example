# API
NODE_ENV="development"
PORT=8080 # App's port
HOST_NAME="http://localhost" # App's DNS

# Client
CORS_ORIGIN= # Client's DNS

# Rate Limiter
RATE_LIMITER_WINDOW_SEC=60
RATE_LIMITER_MAX_REQ=60

# PostgreSQL
DATABASE_URL=

# JWT
JWT_SECRET_KEY=
JWT_EXP="7d"

# Redis
REDIS_URL=
REDIS_USE_TLS="false"

# Nodemailer
NODEMAILER_SENDER="Informatics Learning Center <dummy@dum.dum>" # Verified Sender Identity
NODEMAILER_USER=
NODEMAILER_PASS=
NODEMAILER_HOST=
NODEMAILER_PORT=
SMTP_SECURE="false"

# S3
# For local development, S3_ENDPOINT and S3_PUBLIC_ENDPOINT can be the same.
# For Docker production, S3_ENDPOINT should be the internal service name (e.g., http://s3:9000).
# For Docker production, S3_PUBLIC_ENDPOINT should be the public-facing URL (e.g., https://minio.your-domain.com).
S3_ENDPOINT=http://localhost:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_TEST_BUCKET_NAME= # Only for setting up bucket during testing
S3_REGION=

# External APIs
DOCRAPTOR_API_KEY=